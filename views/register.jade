extends layout

block content 
  .container 
     h1 Register
     p Please register below
     ul.errors
              if errors
                 each error, i in errors
                      li.alert.alert-danger #{error.msg}
     form(method='post', action='/users/register', enctype='multipart/form-data')
              .form-group
                  label Name 
                  input.form-control(type="text", name='name', placeholder="Your Name" )
              .form-group
                  label Email 
                  input.form-control(type="email", name='email', placeholder="Your Email" )
               .form-group
                  label Username 
                  input.form-control(type="text", name='username', placeholder="Your Username" )
              .form-group
                  label Password 
                  input.form-control(type="password", name='password', placeholder="Password" )
               .form-group
                  label Confirm Password 
                  input.form-control(type="password", name='password2', placeholder="Confirm Password" )
               .form-group
                  label Profile Image
                  input.form-control( name='profile image', type ='file' )
              input.btn.btn-default(name ='submit', type="submit", value='Register')